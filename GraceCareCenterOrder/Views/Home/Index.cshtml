@{
    ViewBag.Title = "Grace Church Care Center";
}

<div class="jumbotron">
    <h1>Grace Care Center Food Pantry</h1>
    <p class="lead">Start here to create a food pantry order.</p>
    <p>
        @Html.ActionLink("Create Order", "BarCodeDetails", "Customer", null, new { @class = "btn btn-primary btn-large" })
    </p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Getting started</h2>
        <p>
            Grace Care Center is here to help you.
        </p>
        <p>
            @Html.ActionLink("Create a Food Pantry Order", "Index", "BarCode", null, new { @class = "btn btn-primary btn-large" })
        </p>
    </div>
    <div class="col-md-4">
        <h2>BarCodes</h2>
        <p>
            Review BarCodes
        </p>
        <p>
            @Html.ActionLink("Create a Food Pantry Order", "Index", "BarCode", null, new { @class = "btn btn-primary btn-large" })
        </p>
    </div>
    <div class="col-md-4">
        <h2>Categories</h2>
        <p>Review Food Pantry Catagories.</p>
        <p>
            @Html.ActionLink("Categories", "Index", "Category", null, new { @class = "btn btn-primary btn-large" })
        </p>
    </div>
    <div class="col-md-4">
        <h2>Sub-Categories</h2>
        <p>Review Food Pantry SubCatagories.</p>
        <p>
            @Html.ActionLink("Sub-Categories", "Index", "SubCat", null, new { @class = "btn btn-primary btn-large" })
        </p>
    </div>
    <div class="col-md-4">
        <h2>Items</h2>
        <p>Review Food Pantry Items.</p>
        <p>
            @Html.ActionLink("Items", "Index", "Item", null, new { @class = "btn btn-primary btn-large" })
        </p>
    </div>
    <div class="col-md-4">
        <h2>Customers</h2>
        <p>Review Food Pantry Customers.</p>
        <p>
            @Html.ActionLink("Customers", "Index", "Customer", null, new { @class = "btn btn-primary btn-large" })
        </p>
    </div>
</div>