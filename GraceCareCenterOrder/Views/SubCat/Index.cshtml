@model IEnumerable<CareModels.SubCategories.SubCatList>

@{
    ViewBag.Title = "Index";
}

<h2>Pantry Sub-Categories</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (TempData.ContainsKey("SaveResult"))
{
    <div class="Alert alert-success fade in" role="alert">
        @ViewBag.SaveResult
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubCatName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubCatMaxAllowed)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubCatName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubCatMaxAllowed)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.SubCatId }) |
                @Html.ActionLink("Details", "Details", new { id = item.SubCatId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.SubCatId })
            </td>
        </tr>
    }

</table>
