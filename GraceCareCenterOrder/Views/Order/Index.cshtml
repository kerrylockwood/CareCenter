@model IEnumerable<CareModels.Orders.OrderList>

@{
    ViewBag.Title = "Index";
}

<h2>Pantry Orders</h2>

<p>
    @Html.ActionLink(linkText: "Create New", actionName: "GetCustBarCode", routeValues: new { isCust = false })
    @*@Html.ActionLink(linkText: "Create Order", actionName: "GetCustBarCode", controllerName: "Order", routeValues: new { isCust = true }, htmlAttributes: new { @class = "btn btn-primary btn-large" })*@
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SlotDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustFirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustLastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Deliver)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PullStarted)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PullCompleted)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    @Html.HiddenFor(modelItem => item.CustId)
    <td>
        @Html.DisplayFor(modelItem => item.SlotDateTime)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CustFirstName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CustLastName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Deliver)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PullStarted)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PullCompleted)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.OrderId, isCust = false }) |
        @Html.ActionLink("Details", "Details", new { id = item.OrderId }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.OrderId })
    </td>
</tr>
}

</table>
